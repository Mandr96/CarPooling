@model IEnumerable<CarPooling.Models.Viaggio>

@{
    ViewBag.Title = "HomeAutista";
}

<h2>I tuoi viaggi</h2>

<p>
    @Html.ActionLink("Crea Nuovo Viaggio", "InsertViaggio", "Viaggi", new { email = ViewBag.Email })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdViaggio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CittaPartenza)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CittaArrivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataOraPartenza)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataOraArrivo)
        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdViaggio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CittaPartenza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CittaArrivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataOraPartenza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataOraArrivo)
            </td>
            <td>           
                @Html.ActionLink("Dettagli", "Dettagli", "Viaggi", new { id=item.IdViaggio }, null) 
            </td>
        </tr>
    }
</table>
