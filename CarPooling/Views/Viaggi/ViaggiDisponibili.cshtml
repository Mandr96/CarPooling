@model IEnumerable<CarPooling.Models.Viaggio>

@{
    ViewBag.Title = "ViaggiDisponibili";
}
<style>
    tr.no-border td {
        border-bottom: none;
        border-top: none       
    }
</style>
<h2>Viaggi Disponibili</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Data
        </th>
        <th>
            Orario di partenza
        </th>
        <th>
            Tratta
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Costo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="no-border">
            <td>
                @item.DataOraPartenza.ToShortDateString()
            </td>
            <td>
                @item.DataOraPartenza.ToShortTimeString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CittaPartenza) -> @Html.DisplayFor(modelItem => item.CittaArrivo)
            </td>
            <td>
                € @item.Costo.ToString("N")
            </td>
            
        </tr>
        <tr class="no-border">
            <td>provaaaaaaaaaaaaaaaaa aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa</td>
        </tr>

    }

</table>
